
<section class="mx-20" >
  <% @users.each do |user| %>
    <div class="user">
      <img class="pro-pic" src='<%user.photo%>' alt='Profile-pic'>
      <div class="user-dets">
        <h2 class="user-name" ><%=user.name%></h2>
        <p class='num-posts' >Number of Posts: <%=user.posts_counter%></p>
      </div>
    </div>
  <%end%>
</section>